<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Quiz">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/level1_text"
        android:id="@+id/level1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff149339"
        android:textSize="@dimen/abc_action_bar_stacked_max_height"
        android:textStyle="bold"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/question1_text"
        android:id="@+id/question1"
        android:textColor="#ffe37019"
        android:textSize="@dimen/abc_action_bar_stacked_max_height"
        android:layout_above="@+id/option1"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/option1_text"
        android:id="@+id/option1"
        android:textColor="#ff193cc9"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:layout_above="@+id/nav1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/option2_text"
        android:id="@+id/option2"
        android:layout_alignBottom="@+id/option1"
        android:layout_alignRight="@+id/question1"
        android:layout_alignEnd="@+id/question1"
        android:textColor="#ff0d32c5"
        android:textSize="@dimen/abc_text_size_display_1_material" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav1"
        android:id="@+id/nav1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/beer"
        android:layout_above="@+id/question1"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
