<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.delin.way2dsm2.quiz1"
    android:id="@+id/id2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/level2_text"
        android:id="@+id/level2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff18a03b"
        android:textStyle="bold"
        android:textSize="@dimen/abc_action_bar_stacked_max_height" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/question2_text"
        android:id="@+id/question2"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/level2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:textColor="#ffea7737" />

    <EditText
        android:layout_width="@dimen/abc_action_bar_stacked_tab_max_width"
        android:layout_height="wrap_content"
        android:id="@+id/blankspace"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/level2"
        android:layout_alignEnd="@+id/level2"
        android:inputType="none" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/computer_text"
        android:id="@+id/computer"
        android:layout_alignBottom="@+id/blankspace"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ff159e33"
        android:textSize="@dimen/abc_text_size_display_1_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/option21_text"
        android:id="@+id/option21"
        android:textColor="#ff1f36d3"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:layout_below="@+id/blankspace"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/option22_text"
        android:id="@+id/option22"
        android:layout_below="@+id/option21"
        android:layout_toLeftOf="@+id/option21"
        android:layout_toStartOf="@+id/option21"
        android:textColor="#ff1d36c1"
        android:textSize="@dimen/abc_text_size_display_1_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/option23_text"
        android:id="@+id/option23"
        android:layout_alignBottom="@+id/option22"
        android:layout_alignLeft="@+id/computer"
        android:layout_alignStart="@+id/computer"
        android:textColor="#ff1b33c7"
        android:textSize="@dimen/abc_text_size_display_1_material" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score1"
        android:id="@+id/score1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
